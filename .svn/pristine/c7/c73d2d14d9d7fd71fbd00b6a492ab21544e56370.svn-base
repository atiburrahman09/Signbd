        public DataTable SaveVendor()
        {
            VendorDAL vendor = new VendorDAL();

            try
            {
                LumexDBPlayer db = LumexDBPlayer.Start(true);
                DataTable dt = vendor.SaveVendor(this, db);
                db.Stop();

                return dt;
            }
            catch (Exception)
            {
                throw;
            }
            finally
            {
                vendor = null;
            }
        }

